<!-- 1.view的基本使用 -->
<!-- view组件独占一行，相当于html中的div，是块级元素 -->
<view class="box">哈哈哈</view>
<view>呵呵呵</view>

<!-- 2.hover-class：当用户按下组件时，显示的样式 -->
<view class="box1" 
      hover-class="hover-class"
      hover-stay-time="0">
box1</view>

<!-- 3.hover-stop-propagation: 防止冒泡 -->
<!-- 有值就是可以防止冒泡，没值的话就不防止 -->
<view class="box2" hover-class="box2-hover">
  <view class="box1" 
      hover-class="hover-class"
      hover-stop-propagation="false">
box1</view>
</view>
