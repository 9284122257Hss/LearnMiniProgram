<!-- 3.给自定义组件传递数据/样式-->
<my-prop title="哈哈哈" titleclass="red"/>
<my-prop title="嘿嘿嘿" titleclass="blue"/>
<my-prop titleclass="pink"/>

<!-- 4.组件内部发出事件 -->
<view>当前计数：{{count}}</view>
<my-event bind:increment="handleIncrement"/>

<!-- 5.tab-control实例-->
<tab-control titles="{{['流行','新款','精选']}}"
             bind:itemclick="handleItemClick"/>

<!-- 6.直接选中组件调用方法或修改数据 -->
<button size="mini" bindtap="handleIncrement">修改组件内的数据</button>
<my-sel class="sel-class" id="sel-class"/>

<view>---------------------------------------------</view>
<!-- 7.插槽的使用 -->
<!-- 7.1单个插槽的使用 -->
<my-slot>
  <button size="mini">我是替换的按钮</button>
</my-slot>

<my-slot>
  <text>哈哈哈哈哈哈哈哈哈哈</text>
</my-slot>

<my-slot>
  <image src="https://timgsa.baidu.com/timg?image&quality=80&size=b9999_10000&sec=1592495067925&di=81b327f4879dcdde9e384f3083de15c8&imgtype=0&src=http%3A%2F%2Fc-ssl.duitang.com%2Fuploads%2Fitem%2F201802%2F23%2F20180223191527_MeVzS.jpeg"></image>
</my-slot>

<my-slot>
  <slider value="60"></slider>
</my-slot>

<!-- 7.2多个插槽的使用 -->
<!-- 注意事项：
    1.给每个插槽起一个名字(name属性) 
    2.必须在componnet中添加一个选项 options-->

<button size="mini" bindtap="handleChangeShow">切换显示</button>
<block wx:if="{{isShow}}">
  <my-mslot>
    <button size="mini" slot="slot2">我是插入的按钮</button>
    <slider slot="slot1"/>
    <text slot="slot3">哈哈哈哈哈哈哈</text>
  </my-mslot>
</block>