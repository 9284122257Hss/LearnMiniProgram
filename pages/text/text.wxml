<!--pages/text/text.wxml-->
<!-- 1.基本使用 -->
<text>Hello World\n</text>
<text>你好，小程序\n</text>

<!--2.selectable：true  -->
<!--默认情况下text中的文本长按是不能被选中的 -->
<!-- 以前需要用mastach语法，现在不需要也可，注：不赋值true或false 只添加该属性也会默认为true -->
<text selectable="{{true}}">hello czz\n</text>
<text selectable>hello hss</text>

<!-- 3.space决定文本空格的大小 -->
<!-- ensp:半个中文字符的大小 -->
<!-- emsp:一个中文字符的大小 -->
<text>hello world\n</text>
<text space="nbsp">hello world\n</text>
<text space="emsp">hello world\n</text>
<text space="ensp">hello world\n</text>

<!-- 4.decode属性：是否解码文本 -->
<text decode>5 &gt; 3\n</text>
<text decode="{{true}}">5 &gt; 3</text>